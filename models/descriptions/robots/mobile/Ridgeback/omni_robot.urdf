<?xml version="1.0"?>
<robot name="omni_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Virtual root link to replace 'world' as parent -->
  <link name="link_root">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Link for X motion -->
  <link name="link_x">
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="joint_x" type="prismatic">
    <parent link="link_root"/>
    <child link="link_x"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.5" upper="1.5" effort="100" velocity="1"/>
  </joint>

  <!-- Link for Y motion -->
  <link name="link_y">
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="joint_y" type="prismatic">
    <parent link="link_x"/>
    <child link="link_y"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="100" velocity="1"/>
  </joint>

  <!-- Base link (rotates around Z) -->
  <link name="base_link">
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.2" ixy="0" ixz="0" iyz="0"/>
    </inertial>

    <collision name="collision">
      <origin xyz="0 0 0.07"/> <!-- rotate 90 deg around X -->
      <geometry>
        <!-- <cylinder radius="0.15" length="0.1"/> -->
        <box size="0.4 0.5 0.15"/> <!-- width, depth, height -->
      </geometry>
    </collision>

    <visual name="visual">
      <origin rpy="1.5708 0 0"/> <!-- rotate 90 deg around X -->
      <geometry>
        <mesh filename="010656_GEO_assembly_platform_Ridgeback.obj" scale="0.0005 0.0005 0.0005"/>
      </geometry>
      <material name="">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint_z" type="revolute">
    <parent link="link_y"/>
    <child link="base_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1"/>
  </joint>

</robot>
