<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="cart.transmission.xacro"/>
  <xacro:include filename="cart.gazebo.xacro"/>
  
  <xacro:macro name="cart_v0" params="parent *joint_origin *joint_axis">
	<joint name="cart_joint" type="prismatic">
	  <xacro:insert_block name="joint_origin"/>
	  <parent link="${parent}"/>
	  <child link="cart_link"/>
          <limit effort="300000000" velocity="30" lower="-1.0" upper = "1.0"/>
          <dynamics damping="0.005" friction="0.1"/> 
	  <xacro:insert_block name="joint_axis"/>
	</joint>

	<link name="cart_link">
	  <visual>
		<geometry>
		  <mesh filename="package://iiwa_crane/meshes/STL/cart/mycart.STL" scale="0.001 0.001 0.001"/>
		</geometry>
		<material name="dark_grey">
        	<color rgba="0.2 0.2 0.2 1.0"/> <!-- Dark grey color -->
      		</material>
	  </visual>
	  <collision>
		<geometry>
		  <mesh filename="package://iiwa_crane/meshes/STL/cart/mycart.STL" scale="0.001 0.001 0.001"/>
		</geometry>
	  </collision>
	  <inertial>
		<origin xyz="0 0 0"/>
		<mass value="370"/>
		<inertia ixx="11.09" ixy="0" ixz="0" iyy="12.32" iyz="0" izz="11.09"/>
	  </inertial>
	</link>
  </xacro:macro>
  
</robot>

